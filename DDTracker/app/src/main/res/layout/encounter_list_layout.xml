<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardBackgroundColor="@color/TextBox">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="2dp">

        <ImageView
            android:id="@+id/initiative_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="8dp"
            android:background="@color/TextBox" />

        <TextView
            android:id="@+id/text_view_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/initiative_icon"
            android:text="Creature Name"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_view_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_1"
            android:layout_toEndOf="@id/initiative_icon"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="Initiative" />

        <TextView
            android:id="@+id/text_viewHP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_1"
            android:layout_toEndOf="@id/text_view_2"
            android:paddingStart="2dp"
            android:paddingEnd="2dp"
            android:text="HP"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_view_current_health"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_1"
            android:layout_toEndOf="@id/text_viewHP"
            android:paddingStart="2dp"
            android:paddingEnd="2dp"
            android:text="0"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_view_health_spacing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_1"
            android:layout_toEndOf="@id/text_view_current_health"
            android:paddingStart="2dp"
            android:paddingEnd="2dp"
            android:text="/"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_view_max_health"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_1"
            android:layout_toEndOf="@id/text_view_health_spacing"
            android:paddingStart="2dp"
            android:paddingEnd="2dp"
            android:text="0"
            android:textStyle="bold" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>